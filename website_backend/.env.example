# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/irf_tracking

# JWT Authentication
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# MinIO Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=irf-assets
MINIO_SECURE=false

# API Keys
ENGRAVE_API_KEY=your-engrave-api-key

# Application Settings
DEBUG=true
API_V1_PREFIX=/api
PROJECT_NAME="IRF QR Tracking"
PROJECT_DESCRIPTION="Backend API for IRF QR code tracking system"
PROJECT_VERSION="0.1.0"

# CORS (comma-separated origins, or * for all)
BACKEND_CORS_ORIGINS=["*"]

# First Superuser (for initial setup)
FIRST_SUPERUSER=admin@irf.com
FIRST_SUPERUSER_PASSWORD=admin123
